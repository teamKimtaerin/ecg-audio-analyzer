# ECG Audio Analysis - AWS Environment Configuration Template
# Copy this file to .env and customize for your deployment

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
ECG_S3_BUCKET=ecg-audio-analysis-bucket
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Instance Information (auto-populated by user-data script)
INSTANCE_ID=i-1234567890abcdef0
INSTANCE_TYPE=g4dn.2xlarge

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO

# Performance Tuning (adjust based on instance type)
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8
OPENBLAS_NUM_THREADS=8

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDNN_V8_API_ENABLED=1

# CloudWatch Configuration
CLOUDWATCH_NAMESPACE=ECG/AudioAnalysis
CLOUDWATCH_ENABLED=true

# Model Configuration
SPEAKER_DIARIZATION_MODEL=pyannote/speaker-diarization@2022.07
EMOTION_MODEL=facebook/wav2vec2-base-960h
ACOUSTIC_MODEL=opensmile-default

# Processing Configuration
MAX_CONCURRENT_JOBS=4
MAX_FILE_SIZE_MB=1000
PROCESSING_TIMEOUT_MINUTES=30